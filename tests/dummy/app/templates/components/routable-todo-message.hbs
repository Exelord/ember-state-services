<div class="pure-u-1">
  <div class="email-content">
    <div class="email-content-header pure-u-1">
      <div class="pure-u-1">

        {{#if data.isEditing}}
          <h1 class="email-content-title">{{input value=data.title}}</h1>
        {{else}}
          <h1 class="email-content-title">{{todo.title}}</h1>
          <p class="email-content-subtitle">From <a>{{todo.from.name}}</a> at <span>3:56pm, April 3, 2012</span></p>
        {{/if}}

      </div>
    </div>

    {{#if data.isEditing}}
      <div class="email-content-body">
        {{textarea value=data.body rows="4"}}
        <button class="pure-button pure-button-primary" {{action 'update'}}>Update Todo</button>
        <button class="pure-button" {{action 'cancel'}}>Cancel</button>
      </div>
    {{else}}
      <div class="email-content-body">
        {{todo.body}}
        <hr>
        <button class="pure-button pure-button-primary" {{action 'edit'}}>Edit</button>
        <button class="pure-button" {{action 'markAs' todo.status}}>Mark as Completed</button>
        <button class="pure-button" {{action 'trash'}}>Trash</button>
      </div>
    {{/if}}
  </div>
</div>
